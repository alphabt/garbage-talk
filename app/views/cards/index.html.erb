<h1>Listing Cards</h1>

<br>
<%= render 'form' %>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Num answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.content %></td>
        <td><%= card.num_answer %></td>
        <td><%= link_to 'Show', card, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_card_path(card), :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', card_path(card, :page => params[:page]), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @cards, :theme => 'twitter-bootstrap-3' %>
