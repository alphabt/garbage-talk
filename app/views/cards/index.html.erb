<h1>Listing Cards</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Num answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.content %></td>
        <td><%= card.num_answer %></td>
        <td><%= link_to 'Show', card, :class => "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_card_path(card), :class => "btn btn-default" %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path, :class => "btn btn-primary" %>
<%= paginate @cards %>
