<%= form_for(@card) do |f| %>
  <%= flash_messages %>

  <div class="form-group">
    <%= f.label :content %><br>
    <%= f.text_field :content, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :num_answer %><br>
    <%= f.number_field :num_answer, :class => "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary"%>
  </div>
<% end %>
